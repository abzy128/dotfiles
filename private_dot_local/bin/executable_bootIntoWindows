#!/bin/bash
# Problem is that grub's save-default won't work when you reboot in Windows
# You have to manually select one to save it as a default
#sudo grub-reboot 2
#sudo reboot
WINDOWS_ENTRY=$(efibootmgr | grep -i windows | grep -oP 'Boot\K[0-9A-F]+' | head -1)
sudo efibootmgr -n "$WINDOWS_ENTRY" && sudo reboot
